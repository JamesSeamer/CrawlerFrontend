<%- include('../partials/header', { clients: [], activeClientId: null }) %>
<h1>Images</h1>
<% if (message) { %>
  <div class="alert alert-warning"><%= message %></div>
<% } %>
<table id="imageTable" class="table table-striped table-bordered table-hover">
  <thead class="table-primary">
    <tr>
      <th>ID</th>
      <th>URL</th>
      <th>Status Code</th>
      <th>Size</th>
      <th>Alt Text</th>
    </tr>
  </thead>
  <tbody>
    <% images.forEach(img => { %>
      <tr>
        <td><%= img.id %></td>
        <td><a href="<%= img.url %>" target="_blank"><%= img.url %></a></td>
        <td><%= img.status_code %></td>
        <td><%= img.size %></td>
        <td><%= img.alt_text %></td>
      </tr>
    <% }) %>
  </tbody>
</table>


<script>
  $(document).ready(function() {
    $('#imageTable').DataTable();
  });
</script>

<%- include('../partials/footer') %>
