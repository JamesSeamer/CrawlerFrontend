<!DOCTYPE html>
<html>
<head>
    <title>Web Crawler</title>
    <link rel="stylesheet" href="/css/main.css">

    <!-- DataTables Bootstrap 5 CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/2.3.3/css/dataTables.bootstrap5.min.css">
    <script src="/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
        <!-- DataTables JS & jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="//cdn.datatables.net/2.3.3/js/dataTables.min.js"></script>
</head>
<body>
    <header>

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Web Crawler</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item"><a class="nav-link" href="/4xx">4xx</a></li>
                <li class="nav-item"><a class="nav-link" href="/meta">Meta</a></li>
                <li class="nav-item"><a class="nav-link" href="/images">Images</a></li>
                <li class="nav-item"><a class="nav-link" href="/redirect_chains">Redirect Chains</a></li>
                <li class="nav-item"><a class="nav-link" href="/client">client</a></li>
                <li class="nav-item"><a class="nav-link" href="/submit_crawl">Submit Crawl</a></li>
                
            </ul>
            <button id="openCrawlPopup" class="btn btn-primary ms-auto">
                <% if (activeCrawlId) { 
                    const selectedCrawl = crawls.find(c => c.id == activeCrawlId);
                %>
                <% if (selectedCrawl) { %>
                    Selected Crawl: <%= selectedCrawl.start_url %> (<%= selectedCrawl.start_time.toISOString().slice(0,19).replace('T',' ') %>)
                <% } else { %>
                    Crawl not found
                <% } %>
                <% } else { %>
                Select Crawl
                <% } %>
            </button>
            </div>
        </div>
        </nav>



        <div id="crawlPopup" class="popup" style="display:none;">
        <div class="popup-content">
            <span id="closeCrawlPopup" style="cursor:pointer; float:right;">&times;</span>
            <h2>Select a Crawl</h2>

            <!-- Search -->
            <div class="input-group mb-3">
            <span class="input-group-text">Search</span>
            <input id="crawlSearch" type="text" class="form-control" placeholder="Filter by Crawl ID or Start URL">
            </div>

            <table id="crawlTable" class="table table-bordered table-striped table-sm" style="width:100%">
            <thead>
                <tr>
                <th>ID</th>
                <th>Start URL</th>
                <th>Start Time</th>
                <th># URLs</th>
                <th>Select</th>
                </tr>
            </thead>
            <tbody>
                <% crawls.forEach(crawl => { %>
                <tr>
                    <td><%= crawl.id %></td>
                    <td><%= crawl.start_url %></td>
                    <td><%= crawl.start_time.toISOString().slice(0,19).replace('T',' ') %></td>
                    <td><%= crawl.url_count %></td>
                    <td>
                    <form method="POST" action="/set-crawl">
                        <input type="hidden" name="crawlId" value="<%= crawl.id %>">
                        <button type="submit" class="btn btn-sm btn-primary">Select</button>
                    </form>
                    </td>
                </tr>
                <% }) %>
            </tbody>
            </table>
        </div>
        </div>
    </header>
    <main>
